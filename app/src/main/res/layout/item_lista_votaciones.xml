<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView android:id="@+id/imagenU"
        android:layout_width="50dp"
        android:layout_height="50dp"/>
    <TextView android:id="@+id/nombreAlbumU"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#900000"
        android:layout_toRightOf="@+id/imagenU"/>
    <TextView android:id="@+id/valoracionU"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/imagenU"
        android:layout_marginTop="20dp"
        android:background="#900000"
        android:textColor="#ffffff"/>
    <TextView android:id="@+id/comentarioU"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"/>

</RelativeLayout>